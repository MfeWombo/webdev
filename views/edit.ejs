<% include ./includes/header %>
    <% include ./includes/nav %>
    <br>
        <html>

        <body class="style">
            <div class="container">
                
                <div class="row">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <h2 class="color">EDIT STUDENT RECORDS</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <form method="POST" action="/student/<%= data._id%>?_method=PUT">
                                <fieldset>
                                    <legend><%= data.firstname %><%= data.lastname %></legend>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" name="data[firstname]" class="form-control" value="<%=data.firstname%>" required>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="data[lastname]" class="form-control" value="<%=data.lastname%>" required>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        
                                        <div class="col-md-6">
                                            <select name="data[gender]" class="form-control">
                                            <option value="male">male</option>
                                            <option value="female">female</option>
                                    </select>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="data[state]" class="form-control" value="<%=data.state%>" required>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        
                                        <div class="col-md-6">
                                            <input type="text" name="data[email]" class="form-control" value="<%=data.email%>" required>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="data[course]" class="form-control" value="<%=data.course%>" required>
                                        </div>
                                    </div>
                                    <br>
                                    
                                    <div class="row">
                                        
                                        
                                        <div class="col-md">
                                            <input type="text" name="data[address]" class="form-control" value="<%=data.address%>" required>
                                        </div>
                                    </div>
                                    <br>
                
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                    <br>
                </div>
            </div>
        </body>
        </html>