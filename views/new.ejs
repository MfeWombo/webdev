<% include ./includes/header %>
    <% include ./includes/nav %>
    <br>
        <html>

        <body class="style">
            <div class="container">
                <div class='row'>
                    <div class= 'col-md'>
                        <h4>SCHOOL INFORMATION SYSTEM</h4>
                    </div>
                </div>
                
                    
                    <div class="row">
                        <div class="col-md-6">
                            <form method="POST" action="/studentAll">
                                <fieldset>
                                    <legend>Register</legend>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" name="data[firstname]" class="form-control" placeholder="firstname" required>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="data[lastname]" class="form-control" placeholder="lastname" required>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        
                                        <div class="col-md-6">
                                    <select name="data[gender]" class="form-control">
                                            <option value="male">male</option>
                                            <option value="female">female</option>
                                    </select>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="data[course]" class="form-control" placeholder="course" required>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        
                                        <div class="col-md-6">
                                            <input type="text" name="data[email]" class="form-control" placeholder="email" required>
                                        </div>
                                         <div class="col-md-6">
                                            <input type="text" name="data[state]" class="form-control" placeholder="state" required>
                                        </div>
                                    </div>
                                    <br>
                                    
                                    
                                    <div class="row">
                                        <div class="col-md">
                                            <input type="text" name="data[address]" class="form-control" placeholder="address" required>
                                        </div>
                                        
                                        
                                    </div>

                                    <div>
                                        <button type="submit" class="btn btn-default btn-lg">Submit</button>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                    <br>
                </div>
            </div>
        </body>

        </html>